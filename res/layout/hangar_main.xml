<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
android:layout_width="fill_parent" android:layout_height="fill_parent"
android:orientation="vertical" android:background="@drawable/hangar" xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:id="@+id/tableLayout2" android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="0.2">
        <TableRow android:id="@+id/tableRow2" android:layout_width="fill_parent" android:layout_gravity="center_horizontal" android:layout_height="fill_parent" android:layout_weight="1">
            <ViewFlipper android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/ViewFlipper01" android:layout_gravity="center_horizontal" android:layout_height="fill_parent">
                <TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:text="HANGAR / MAIN" android:layout_height="wrap_content" android:textColor="#00DDCC" android:textSize="40dip" android:textStyle="bold" android:layout_gravity="center_horizontal"></TextView>
                <TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:text="HANGAR / REPAIR" android:layout_height="wrap_content" android:textColor="#00DDCC" android:textSize="40dip" android:textStyle="bold" android:layout_gravity="center_horizontal"></TextView>
                <TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:text="HANGAR / SKILLS" android:layout_height="wrap_content" android:textColor="#00DDCC" android:textSize="40dip" android:textStyle="bold" android:layout_gravity="center_horizontal"></TextView>
                <TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:text="HANGAR / SAVE GAME" android:layout_height="wrap_content" android:textColor="#00DDCC" android:textSize="40dip" android:textStyle="bold" android:layout_gravity="center_horizontal"></TextView>
            </ViewFlipper>
        </TableRow>
    </TableLayout>
    <TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1">
        <TableRow android:id="@+id/tableRow1" android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:baselineAligned="false">
            <Button android:text="@string/button_previous" android:id="@+id/button_previous" android:layout_height="wrap_content" android:layout_marginLeft="50dip" android:layout_marginRight="25dip" android:layout_width="100px" android:layout_weight="1" android:layout_gravity="center"></Button>
            <Button android:text="@string/button_next" android:id="@+id/button_next" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="25dip" android:layout_marginRight="50dip" android:layout_width="100px" android:layout_weight="1"></Button>
        </TableRow>
    </TableLayout>

</LinearLayout>
