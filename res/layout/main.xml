<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/testivalikko"  
    android:padding="15dip" 
    android:layout_width="fill_parent">
    <!-- android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:layout_marginBottom="5px"> -->

<TableLayout android:id="@+id/tableLayout1" 
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent" 
             android:orientation="horizontal">
    <TableRow android:layout_height="wrap_content" 
		      android:layout_width="fill_parent" 
		      android:gravity="center_horizontal|center_vertical" 
		      android:id="@+id/tableRow1">
        <TextView android:textSize="35sp" 
                  android:layout_gravity="top" 
                  android:layout_height="wrap_content" 
                  android:text="@string/app_name" 
                  android:id="@+id/label_title" 
                  android:layout_width="wrap_content" 
                  android:gravity="bottom">
        </TextView>
    </TableRow>
    <TableRow android:id="@+id/tableRow2" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent">    
        <Button android:id="@+id/button_story" 
                android:textSize="20sp" 
                android:text="@string/button_story" 
                android:textColor="@color/button_text" 
                android:gravity="center" 
                android:background="@color/button_bg" 
                android:layout_height="wrap_content"
                android:padding="5dip" 
                android:layout_width="wrap_content"  
                android:layout_marginRight="25dip"
                android:layout_marginLeft="25dip">
        </Button>
        <Button android:layout_gravity="right" android:layout_height="wrap_content" android:background="@color/button_bg" android:textSize="20sp" android:textColor="@color/button_text" android:text="@string/button_survival" android:layout_width="fill_parent" android:padding="5dip" android:layout_marginLeft="25dip" android:gravity="left" android:id="@+id/button_survival"></Button>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content">
        <Button android:text="@string/button_highscores" 
                android:background="@color/button_bg" 
                android:textColor="@color/button_text" 
                android:textSize="20sp" 
                android:gravity="center" 
                android:layout_height="wrap_content" 
                android:id="@+id/button_highscores" 
                android:layout_width="wrap_content" 
                android:padding="5dip" 
                android:layout_marginTop="25dip"
                android:layout_marginLeft="25dip">
        </Button>    
        <Button android:text="@string/button_quit" 
                android:background="@color/button_bg" 
                android:textColor="@color/button_text" 
                android:textSize="20sp" 
                android:gravity="center" 
                android:layout_height="wrap_content" 
                android:id="@+id/button_quit" 
                android:layout_width="wrap_content" 
                android:padding="5dip"
                android:layout_gravity="bottom"
                android:layout_marginLeft="25dip">
        </Button>    
    </TableRow>

</TableLayout>

<TableLayout android:id="@+id/tableLayout2" 
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent" 
             android:layout_gravity="bottom"
             android:gravity="bottom"
             android:orientation="horizontal" 
             android:layout_marginTop="25dip">
       <TableRow android:id="@+id/tableRow4" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content">
        <Button android:text="@string/button_help" 
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content" 
                android:background="@color/button_bg"
                android:layout_gravity="center"
                android:gravity="center" 
                android:textSize="20sp" 
                android:textColor="@color/button_text" 
                android:padding="5dip" 
                android:id="@+id/button_help">
        </Button>
        <CheckBox android:id="@+id/checkBoxParticle" 
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|right"  
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip">
        </CheckBox>
        <CheckBox android:id="@+id/checkBoxMusic" 
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|left" 
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip">
        </CheckBox>
        <CheckBox android:id="@+id/checkBoxSound" 
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|right" 
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip">
        </CheckBox>
    </TableRow>
</TableLayout>
</LinearLayout>
