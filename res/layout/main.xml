<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:padding="30dip"
    >
<TextView  
    android:id="@+id/label_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:layout_gravity="center"
    android:textSize="35sp"
    android:layout_marginBottom="25dip"
    ></TextView>

<Button android:text="@string/button_story"
android:id="@+id/button_story"
android:layout_width="fill_parent"
android:layout_height="wrap_content"></Button>
<Button android:text="@string/button_survival"
android:id="@+id/button_survival"
android:layout_width="fill_parent"
android:layout_height="wrap_content"></Button>
<Button android:text="@string/button_options"
android:id="@+id/button_options"
android:layout_width="fill_parent"
android:layout_height="wrap_content"></Button>  
<Button android:text="@string/button_help"
android:id="@+id/button_help"
android:layout_width="fill_parent"
android:layout_height="wrap_content"></Button> 
<Button android:text="@string/button_quit"
android:id="@+id/button_quit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"></Button>     
</LinearLayout>
