<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/background"  
    android:padding="30dip" 
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginBottom="10px">
    
<TextView android:text="@string/app_name" android:layout_height="wrap_content" android:id="@+id/label_title" android:layout_width="wrap_content" android:textSize="35sp" android:layout_gravity="center" android:layout_marginBottom="25dip"></TextView>
    
<TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:text="@string/button_survival" android:background="@color/button_bg" android:textColor="@color/button_text" android:textSize="20sp" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/button_survival" android:layout_width="fill_parent" android:padding="5dip" android:layout_alignParentLeft="true"></Button>
        <Button android:id="@+id/button_story" android:textSize="20sp" android:text="@string/button_story" android:textColor="@color/button_text" android:gravity="center" android:background="@color/button_bg" android:layout_height="wrap_content" android:padding="5dip" android:layout_width="fill_parent" android:layout_alignParentRight="true"></Button>
    </TableRow>
    <TableRow android:id="@+id/tableRow2" android:layout_width="fill_parent" android:layout_height="wrap_content">    
        <Button android:text="@string/button_highscores" android:background="@color/button_bg" android:textColor="@color/button_text" android:textSize="20sp" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/button_highscores" android:layout_width="wrap_content" android:padding="5dip"></Button>
        <Button android:text="@string/button_options" android:background="@color/button_bg" android:textColor="@color/button_text" android:textSize="20sp" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/button_options" android:layout_width="wrap_content" android:padding="5dip" android:layout_alignParentRight="true"></Button>
    </TableRow>

    <TableRow android:id="@+id/tableRow3" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:text="@string/button_help" android:background="@color/button_bg" android:textColor="@color/button_text" android:textSize="20sp" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/button_help" android:layout_width="wrap_content" android:padding="5dip"></Button>
        <Button android:text="@string/button_quit" android:background="@color/button_bg" android:textColor="@color/button_text" android:textSize="20sp" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/button_quit" android:layout_width="wrap_content" android:padding="5dip" android:layout_alignParentRight="true"></Button>    
    </TableRow>
</TableLayout>

</LinearLayout>
