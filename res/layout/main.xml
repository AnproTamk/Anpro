<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/testivalikko"  
    android:padding="15dip" 
    android:layout_width="fill_parent">
    <!-- android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:layout_marginBottom="5px"> -->

<TableLayout android:id="@+id/tableLayout1" 
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent" 
             android:orientation="horizontal">
    <TableRow android:id="@+id/tableRow2" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent">    
        <ImageButton android:id="@+id/button_story" 
                     android:src="@drawable/story"
                     android:gravity="center" 
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>
        <ImageButton android:id="@+id/button_survival"
                     android:layout_gravity="right" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/survival" 
                     android:layout_width="fill_parent" 
                     android:gravity="center"/>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content">
        <ImageButton android:id="@+id/button_highscores" 
                     android:gravity="center" 
                     android:layout_height="wrap_content" 
                     android:src="@drawable/highscores" 
		             android:layout_width="fill_parent"/>
        <ImageButton android:id="@+id/button_quit" 
                     android:src="@drawable/quit" 
	                 android:gravity="center" 
	                 android:layout_height="wrap_content" 
	                 android:layout_width="wrap_content"/>
    </TableRow>

</TableLayout>

<TableLayout android:id="@+id/tableLayout2" 
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent" 
             android:layout_gravity="bottom"
             android:gravity="bottom"
             android:orientation="horizontal" 
             android:layout_marginTop="25dip">
       <TableRow android:id="@+id/tableRow4" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content">
        <ImageButton android:id="@+id/button_help"
                     android:layout_height="wrap_content" 
                     android:layout_width="wrap_content" 
                     android:layout_gravity="center"
                     android:gravity="center" 
                     android:padding="5dip" 
                     android:src="@drawable/help"/>
        <CheckBox android:id="@+id/checkBoxParticle"  
                  android:background="@drawable/particle"
                  android:button="@drawable/checkbox"
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|right"  
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip"/>
        <CheckBox android:id="@+id/checkBoxMusic"
                  android:background="@drawable/music"
                  android:button="@drawable/checkbox"         
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|left" 
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip"/>
        <CheckBox android:id="@+id/checkBoxSound" 
                  android:background="@drawable/sound" 
                  android:button="@drawable/checkbox" 
                  android:layout_height="wrap_content" 
                  android:gravity="bottom|right" 
                  android:layout_width="wrap_content" 
                  android:layout_marginRight="25dip"/>
    </TableRow>
</TableLayout>
</LinearLayout>
