<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@color/background"  
    android:padding="30dip" 
    android:layout_width="fill_parent">

<TextView  
    android:id="@+id/label_title"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:layout_gravity="center"
    android:textSize="35sp"
    android:layout_marginBottom="25dip" android:layout_width="wrap_content"></TextView>
<TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:layout_height="wrap_content" android:id="@+id/player" android:text="@string/player" android:layout_width="125dip" android:layout_marginBottom="80px"></Button>
        <Button android:layout_height="wrap_content" android:id="@+id/score" android:text="@string/score" android:layout_width="fill_parent"></Button>
    </LinearLayout>
</TableLayout>
<LinearLayout android:id="@+id/linearLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content">
</LinearLayout>
<LinearLayout android:id="@+id/linearLayout3" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <Button android:layout_height="wrap_content" android:id="@+id/resetHighScore" android:text="@string/resetHighScore" android:layout_width="125dip"></Button>
    <Button android:layout_height="wrap_content" android:id="@+id/goHome" android:text="@string/goHome" android:layout_width="fill_parent"></Button>
</LinearLayout>     

</LinearLayout>
