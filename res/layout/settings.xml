<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	android:id="@+id/linearLayout1" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/settings_menu" 
	xmlns:android="http://schemas.android.com/apk/res/android">

    
    <TableLayout 
    	android:id="@+id/tableLayout1" 
    	android:layout_height="fill_parent" 
    	android:layout_width="wrap_content">
        <TableRow android:layout_width="wrap_content" android:id="@+id/tableRow5" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:id="@+id/label_title" android:layout_height="wrap_content" android:layout_gravity="center" android:background="@drawable/settings" android:textSize="35sp" android:layout_marginBottom="25dip"></TextView>
        </TableRow>
        
        <TableRow 
        	android:id="@+id/tableRow1"
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
            
            <Button android:id="@+id/button_music_on" 
                 	android:layout_height="wrap_content" 
                 	android:layout_width="wrap_content"  
                 	android:background="@drawable/button_music_on" 
                 	android:padding="5dip" 
                 	android:layout_marginLeft="10dip" 
        			android:layout_marginRight="275dip">
        	</Button>
        	
            <Button android:background="@drawable/button_sounds_on" 
            		android:layout_height="wrap_content" 
            		android:layout_width="wrap_content"
            		android:layout_marginLeft="-175dip"
        			android:layout_marginRight="100dip" 
            		android:padding="5dip" 
            		android:id="@+id/button_sounds_on">
            </Button>
            
        </TableRow>
        
        <TableRow 
        	android:id="@+id/tableRow2" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">

        </TableRow>
        
        <TableRow 
        	android:id="@+id/tableRow3" 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
        	
        	
            <Button android:id="@+id/button_particles_on" 
                	android:layout_height="wrap_content" 
                 	android:layout_width="wrap_content"  
                 	android:background="@drawable/button_particles_on"
                 	android:padding="5dip" 
                 	android:layout_marginLeft="10dip" 
        			android:layout_marginRight="275dip">
        	</Button>
        	
            <Button android:background="@drawable/button_vibration_on"
            		android:layout_height="wrap_content" 
            		android:layout_width="wrap_content" 
            		android:padding="5dip"
            		android:layout_marginLeft="-175dip"
        			android:layout_marginRight="100dip" 
            		android:id="@+id/button_vibration_on">
            </Button>
            
        </TableRow>
        
        <TableRow 
        	android:id="@+id/tableRow4" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">
        	
            <ImageButton android:layout_marginRight="200dip" 
            			 android:layout_gravity="center_horizontal" 
            			 android:background="@drawable/checkbox_on_background" 
            			 android:layout_width="wrap_content" 
            			 android:id="@+id/button_mainmenu" 
            			 android:layout_marginLeft="10dip" 
            			 android:src="@drawable/button_mainmenu" 
            			 android:layout_height="wrap_content">
           </ImageButton>
            
        </TableRow>
        
    </TableLayout>
    
</LinearLayout>


