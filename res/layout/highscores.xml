<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/testivalikko"
    android:padding="20dip" android:layout_width="fill_parent">

<TextView  
    android:id="@+id/label_title"
    android:layout_height="wrap_content"
    android:background="@drawable/highscores"
    android:layout_gravity="center"
    android:textSize="35sp"
    android:layout_marginBottom="25dip" android:layout_width="wrap_content">
</TextView>
<TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout1" android:layout_height="wrap_content">
    <TextView android:layout_height="wrap_content" 
              android:layout_width="wrap_content" 
              android:id="@+id/score_0" android:text="@string/score_default_str"
              android:gravity="center"/>
    <TextView android:layout_height="wrap_content" 
              android:layout_width="wrap_content" 
              android:id="@+id/score_1" android:text="@string/score_default_str"
              android:gravity="center"/>
    <TextView android:layout_height="wrap_content" 
              android:layout_width="wrap_content" 
              android:id="@+id/score_2" android:text="@string/score_default_str"
              android:gravity="center"/>
    <TextView android:layout_height="wrap_content" 
              android:layout_width="wrap_content" 
              android:id="@+id/score_3" android:text="@string/score_default_str"
              android:gravity="center"/>
    <TextView android:layout_height="wrap_content" 
              android:layout_width="wrap_content" 
              android:id="@+id/score_4" android:text="@string/score_default_str"
              android:gravity="center"/>
    
</TableLayout>
<LinearLayout android:layout_width="fill_parent" 
			  android:id="@+id/linearLayout1" android:layout_marginTop="25dip" android:layout_height="200dip">
			  
    <ImageButton android:padding="0dip" 
    			 android:layout_width="wrap_content" 
    			 android:background="@drawable/checkbox_on_background" 
    			 android:layout_height="wrap_content" 
    			 android:id="@+id/button_reset" 
    			 android:src="@drawable/button_reset">
    </ImageButton>
    
    <ImageButton android:padding="0dip" 
    			 android:layout_width="wrap_content" 
    			 android:background="@drawable/checkbox_on_background" 
    			 android:layout_height="wrap_content" 
    			 android:id="@+id/button_mainmenu" 
    			 android:src="@drawable/button_mainmenu">
    </ImageButton>
</LinearLayout>     

</LinearLayout>
